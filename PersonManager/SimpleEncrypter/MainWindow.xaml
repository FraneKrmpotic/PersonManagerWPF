<Window x:Class="SimpleEncrypter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleEncrypter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Plain" HorizontalAlignment="Left" Margin="71,104,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TbPlain" HorizontalAlignment="Left" Margin="139,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="589" />
        <Label Content="Encrypted" HorizontalAlignment="Left" Margin="71,195,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TbEncrypted" HorizontalAlignment="Left" Margin="139,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="589" />
        <Button x:Name="BtnEncrypt" Content="Encrypt" HorizontalAlignment="Center" Margin="0,272,0,0" VerticalAlignment="Top" Height="61" Width="200" Click="BtnEncrypt_Click"/>

    </Grid>
</Window>
